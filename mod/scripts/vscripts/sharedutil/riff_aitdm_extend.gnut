global function Riff_AITdm_Extend_Init

global const int AITDM_EXTENDED_SQUAD_COUNT = 5
global const int AITDM_EXTENDED_SQUAD_COUNT_HIGH_LEVEL = 3
global const int AITDM_EXTENDED_REAPER_COUNT = 2
global const int AITDM_EXTENDED_PROWLER_COUNT = 4
global const int AITDM_EXTENDED_PILOT_COUNT = 3

global const int AITDM_EXTENDED_SPECTRE_SPAWN_SCORE = 80
global const int AITDM_EXTENDED_STALKER_SPAWN_SCORE = 80
global const int AITDM_EXTENDED_REAPER_SPAWN_SCORE = 80
global const int AITDM_EXTENDED_TITAN_SPAWN_CORE = 320

void function Riff_AITdm_Extend_Init()
{
    // Gamemode Toggle
    AddPrivateMatchModeSettingEnum( "#AITDM_EXTENDED", "aitdm_extended_spawns", [ "#SETTING_DISABLED", "#SETTING_ENABLED" ], "0" )

    // Spawn Settings
    AddPrivateMatchModeSettingArbitrary( "#AITDM_EXTENDED", "aitdm_extended_squad_count", AITDM_EXTENDED_SQUAD_COUNT.tostring() )
    AddPrivateMatchModeSettingArbitrary( "#AITDM_EXTENDED", "aitdm_extended_spectre_spawn_score", AITDM_EXTENDED_SPECTRE_SPAWN_SCORE.tostring() )
    AddPrivateMatchModeSettingArbitrary( "#AITDM_EXTENDED", "aitdm_extended_spectre_spawn_score", "5" )
}