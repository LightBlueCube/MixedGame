void function TryRespawnNewConnectingPlayer( entity player )
{
	player.EndSignal( "OnDestroy" )

	// wave started...
	//if ( file.waveStarted && !file.respawnedPlayerUIDs.contains( player.GetUID() ) ) 
	if ( file.waveStarted ) 
	{
