	// start with titan
	PlayerEarnMeter_SetEnabled( true )
	foreach ( entity player in GetPlayerArray() )
	{
		TryGiveTitanToPlayer( player )
		// mark existing players as respawned
		file.respawnedPlayerUIDs.append( player.GetUID() )
	}
